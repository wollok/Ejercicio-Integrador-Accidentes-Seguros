import fixture.*
import superintendencia.*

test "El costo total para la aseguradora del fitito es 3520" {
	assert.equals(3520, fixture.fitito().cuantoPagaAseguradora(fixture.choque())) 
}

test "El costo total para la aseguradora del bondi es 23520" {
	assert.equals(23520, fixture.bondi().cuantoPagaAseguradora(fixture.choque())) 
}

test "El costo total para la aseguradora de la moto es 23500" {
	assert.equals(23500, fixture.moto().cuantoPagaAseguradora(fixture.choque())) 
}

test "Lo que paga el fitito en un solo siniestro es 20000 " {
	assert.equals(20000, fixture.fitito().cuantoPagaVehiculo(fixture.choque())) 
}

test "Lo que paga el fitito en dos siniestro es 21000 " {
	superintendencia.agregarSiniestro(fixture.choque())
	superintendencia.agregarSiniestro(fixture.vuelco())
	assert.equals(21000, superintendencia.pagoTotalDelVehiculo(fixture.fitito())) 
}

test "Si se quiere ver cuando paga la aseguradora por un auto que no intervino en el choque" {
	assert.throwsException({fixture.bondi().cuantoPagaVehiculo(fixture.vuelco())}) 
}
